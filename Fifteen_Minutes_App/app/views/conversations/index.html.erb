<body id="convo">
<div class="row">
	<div class="col-md-6">
	  <h2>Inbox</h2>
	  <ul>
		<%= render collection: mailbox.inbox, partial: 'conversation' %>
	  </ul>
	</div>
	<div class="col-md-6">
	  <h2>Conversations</h2>
	  <ul>
	    <%= content_tag_for(:li, mailbox.conversations.last) do |conversation| %>
	      <% unless mailbox.conversations.last == nil %>
		    <%= render conversation_path(conversation) %>
		  <% end %>
		<% end %>
	  </ul>
	</div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-6">
	<h3><%= link_to 'Start Conversation', :new_conversation %></h3>
  </div>
</div>
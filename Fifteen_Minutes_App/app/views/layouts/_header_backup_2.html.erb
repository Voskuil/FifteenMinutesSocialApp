<header class="navbar navbar-inverse">
  <div class="container">
    <%= link_to "Fifteen Minutes", root_path, id: "logo" %>
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
    </button>
    <div class="collapse navbar-collapse" id="myNavbar" style="height: 0px;">
      <ul class="nav navbar-nav navbar-right">
	    <%= form_tag(users_path, :method => "get", class: "navbar-form", id: "search-form") do %>
          <li><%= text_field_tag :search, params[:search], placeholder: "Search" %></li>
          <li><button class="btn" type="submit"><i class="icon-search"></i></button></li>
        <% end %>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
		<li><%= link_to "Users", users_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
			  <li><%= link_to 'My Conversations', :conversations %></li>
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
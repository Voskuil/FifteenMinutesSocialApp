    <!-- Styles -->
    <link href="http://getbootstrap.com/2.3.2/assets/css/bootstrap.css" rel="stylesheet">
    <link href="http://getbootstrap.com/2.3.2/assets/css/bootstrap-responsive.css" rel="stylesheet">
    <style>

	
	
	.title {
      line-height: 1;
      font-family: 'Oswald', sans-serif;
	  color: #f00;
    }

    .interest {
      line-height: 1;
      font-family: 'Oswald', sans-serif;
    }

    .description {
      line-height: 1;
      font-family: 'Oswald', sans-serif;
    }
	
	
	
    /* CUSTOMIZE THE NAVBAR
    -------------------------------------------------- */

    /* Special class on .container surrounding .navbar, used for positioning it into place. */
    .navbar-wrapper {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      z-index: 10;
      margin-top: 20px;
	  color: #f00;
      margin-bottom: -90px; /* Negative margin to pull up carousel. 90px is roughly margins and height of navbar. */
    }
    .navbar-wrapper .navbar {

    }

    /* Remove border and change up box shadow for more contrast */
    .navbar .navbar-inner {
      border: 0;
	  color: #f00;
      -webkit-box-shadow: 0 2px 10px rgba(0,0,0,.25);
         -moz-box-shadow: 0 2px 10px rgba(0,0,0,.25);
              box-shadow: 0 2px 10px rgba(0,0,0,.25);
    }

    /* Downsize the brand/project name a bit */
    .navbar .brand {
      padding: 14px 20px 16px; /* Increase vertical padding to match navbar links */
      font-size: 16px;
      font-weight: bold;
      text-shadow: 0 -1px 0 rgba(0,0,0,.5);
	  color: #f00;
	  font-family: 'Oswald', sans-serif;
    }

    /* Navbar links: increase padding for taller navbar */
    .navbar .nav > li > a {
	  color: #f00;
      padding: 15px 20px;
    }

    /* Offset the responsive button for proper vertical alignment */
    .navbar .btn-navbar {
	  color: #f00;
      margin-top: 10px;
    }



    /* CUSTOMIZE THE CAROUSEL
    -------------------------------------------------- */

    /* Carousel base class */
    .carousel {
      margin-bottom: 60px;
	  color: #5a5a5a;
    }

    .carousel .container {
      position: relative;
      z-index: 9;
	  color: #5a5a5a;
    }

    .carousel-control {
      height: 80px;
      margin-top: 0;
      font-size: 120px;
	  font-family: 'Oswald', sans-serif;
	  color: #5a5a5a;
      text-shadow: 0 1px 1px rgba(0,0,0,.4);
      background-color: transparent;
      border: 0;
      z-index: 10;
    }

    .carousel .item {
      height: 500px;
    }
    .carousel img {
      position: absolute;
      top: 0;
      left: 0;
      min-width: 100%;
	  font-family: 'Oswald', sans-serif;
      color: #5a5a5a;
	  height: 500px;
    }

    .carousel-caption {
      background-color: transparent;
      position: static;
      max-width: 550px;
      padding: 0 20px;
	  font-family: 'Oswald', sans-serif;
	  color: #5a5a5a;
      margin-top: 10px;
    }
    .carousel-caption h1,
    .carousel-caption .lead {
      margin: 0;
      line-height: 1.25;
	  font-family: 'Oswald', sans-serif;
	  color: #fff;
      text-shadow: 0 1px 1px rgba(0,0,0,.4);
    }
    .carousel-caption .btn {
      margin-top: 10px;
	  font-family: 'Oswald', sans-serif;
	  color: #fff;
    }



    /* RESPONSIVE CSS
    -------------------------------------------------- */

    @media (max-width: 800px) {

      .container.navbar-wrapper {
        margin-bottom: 0;
        width: auto;
		font-family: 'Oswald', sans-serif;
		color: #f00;
      }
	  
	  .carousel-caption h1 {
        font-size: 30px;
		font-family: 'Oswald', sans-serif;
		color: #fff;
      }
      .carousel-caption .lead,
      .carousel-caption .btn {
        font-size: 20px;
		font-family: 'Oswald', sans-serif;
		color: #fff;
      }
	  
      .navbar-inner {
        border-radius: 0;
        margin: -20px 0;
		color: #f00;
      }

      .carousel .item {
        height: 500px;
		font-family: 'Oswald', sans-serif;
		color: #f00;
      }
      .carousel img {
        width: auto;
        height: 500px;
      }

      .featurette {
        height: auto;
        padding: 0;
		color: #f00;
      }
      .featurette-image.pull-left,
      .featurette-image.pull-right {
        display: block;
        float: none;
        max-width: 40%;
        margin: 0 auto 20px;
		color: #f00;
      }
    }


    @media (max-width: 400px) {

      .navbar-inner {
        margin: -20px;
		font-family: 'Oswald', sans-serif;
		color: #f00;
      }

      .carousel {
        margin-left: -20px;
        margin-right: -20px;
		font-family: 'Oswald', sans-serif;
		color: #f00;
      }
      .carousel .container {
		font-family: 'Oswald', sans-serif;
		color: #f00;
      }
      .carousel .item {
        height: 500px;
		font-family: 'Oswald', sans-serif;
		color: #f00;
      }
      .carousel img {
        height: 300px;
      }
      .carousel-caption {
        width: 65%;
        padding: 0 70px;
        margin-top: 5px;
		font-family: 'Oswald', sans-serif;
		color: #f00;
      }
      .carousel-caption h1 {
        font-size: 15px;
		font-family: 'Oswald', sans-serif;
		color: #fff;
      }
      .carousel-caption .lead,
      .carousel-caption .btn {
        font-size: 10px;
		font-family: 'Oswald', sans-serif;
		color: #fff;
      }

      .marketing .span3 + .span3 {
        margin-top: 40px;
		color: #f00;
      }

      .featurette-heading {
        font-size: 30px;
		font-family: 'Oswald', sans-serif;
		color: #f00;
      }
      .featurette .lead {
        font-size: 18px;
        line-height: 1.5;
		font-family: 'Oswald', sans-serif;
		color: #f00;
      }

    }
    </style>

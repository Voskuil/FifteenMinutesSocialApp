<% if logged_in? %>
    <div class="row">
	  <aside class="col-md-3">
		<section>
		  <h1>
			<%= image_tag current_user.picture.url :size => 200 if current_user.picture? %>
			<%= image_tag("fans.jpg",size: "200x200") if !current_user.picture? %>
		  </h1>
		</section>
	  </aside>
	  <div class="col-md-1">
	    <%= link_to root_url method: :update do %>
	      <span class="glyphicon glyphicon-refresh"></span>
		<% end %>
	  </div>
	  <div class="col-md-1">
	    <%= link_to :conversations do %>
	      <span class="glyphicon glyphicon-comment"></span>
		<% end %>
	  </div>
	  <div class="col-md-1">
	    <%= link_to :new_conversation do %>
	      <span class="glyphicon glyphicon-envelope"></span>
		<% end %>
	  </div>
	  <div class="col-md-5">
        <h2 class="title">My Interests</h2>
        <span class="interest">
		  <% current_user.interest.split(",").each do |word| %>
	      <%= link_to "#" + word, :controller => '/users', :method => 'get', :search => word %>
	    <% end %>
        </span>
      </div>
	</div>
	<div class="row">
	  <a href="<%= user_path(current_user) %>">
	    <aside class="col-md-3">
		  <section class="stats">
		    <%= current_user.name %>
		  </section>
		  <span class="posts">
            <%= pluralize(current_user.posts.count, "post") %>
          </span>
	    </aside>
	  </a>
	</div>
	<div class="row">
	  <aside class="col-md-3">
        <%= form_for(current_user, html: { multipart: true }) do |f| %>
	      <%= f.submit "Upload Picture!", class: "btn btn-danger btn-sm" %>
		  <span class="picture">
            <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
          </span>
	    <% end %>	
      </aside>
      <aside class="col-md-8">
        <section class="post_form">
          <%= render 'shared/post_form' %>
        </section>
      </aside>	  
    </div>
  <div class="row">
    </aside>
    <div class="col-md-3">
      <h2 class="title">Description</h2>
      <span class="description">
        <%= simple_format(current_user.description) %>
      </span>
	  <h3 class="title">Location</h3>
      <span class="description">
        <%= simple_format(current_user.location) %>
      </span>
    </div>
    <div class="col-md-8">
      <h2 class="title">Artist Feed</h2>
      <%= render 'shared/feed' %>
    </div>
  </div>
  <div class="row">
  </div>
<% else %>

  <body>


    <!-- Carousel
    ================================================== -->
    <div id="myCarousel" class="carousel slide">
      <div class="carousel-inner">
        <div class="item active left">
		  <%= image_tag("slide-01.jpg", :size => '1024x691',:alt => "rss feed") %>
          <div class="container">
            <div class="carousel-caption">
              <h1>You got fifteen minutes, use it!</h1>
              <p class="lead">Make a page, post your interests, describe yourself, and instantly connect with other like-minded individuals and organizations.</p>
              <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
            </div>
          </div>
        </div>
        <div class="item next left">
          <%= image_tag("slide-02.jpg", :size => '1024x691', :alt => "rss feed") %>
          <div class="container">
            <div class="carousel-caption">
              <h1>Get in the loop.</h1>
              <p class="lead">A social network for connecting like-minded artists, search and find artists of similar interests.</p>
              <li><%= link_to "Search for users!", users_path, class: "btn btn-large btn-primary" %></li>
            </div>
          </div>
        </div>
        <div class="item">
          <%= image_tag("slide-03.jpg", :size => '1024x691', :alt => "rss feed") %>
          <div class="container">
            <div class="carousel-caption">
              <h1>Express Yourself.</h1>
              <p class="lead">Post your work, give tags to attract followers, and link your page to your other social media accounts.</p>
              <li><%= link_to "See what users are saying!", users_path, class: "btn btn-large btn-primary" %></li>
            </div>
          </div>
        </div>
      </div>
      <a class="left carousel-control" href="https://getbootstrap.com/2.3.2/examples/carousel.html#myCarousel" data-slide="prev">‹</a>
      <a class="right carousel-control" href="https://getbootstrap.com/2.3.2/examples/carousel.html#myCarousel" data-slide="next">›</a>
    </div><!-- /.carousel -->



    <!-- Featurettes -->

    <div class="container marketing">

      <!-- Three columns of text below the carousel -->
      <div class="row">
        <div class="col-md-4">
		  <%= image_tag("artist.jpg", size: "140", class: "img-circle") %>
          <h2>Artists</h2>
          <p>Express yourself through your posts and link followers to your work and projects on other media sites.</p>
          <p><%= link_to "Sign up now »", signup_path, class: "btn" %></p>
        </div><!-- /.col-md-4 -->
        <div class="col-md-4">
          <%= image_tag("business.jpg", size: "140", class: "img-circle") %>
          <h2>Business</h2>
          <p>Attract a wide-range of followers that share similar interests. Be the biggest thing on everyone's feed!</p>
          <p><%= link_to "Sign up now »", signup_path, class: "btn" %></p>
        </div><!-- /.col-md-4 -->
        <div class="col-md-4">
          <%= image_tag("fans.jpg", size: "140", class: "img-circle") %>
          <h2>Fans</h2>
          <p>Connect to your favorite artists, discover and help support upcoming artists and organizations.</p>
          <p><%= link_to "Sign up now »", signup_path, class: "btn" %></p>
        </div><!-- /.col-md-4 -->
      </div><!-- /.row -->


      <!-- START THE FEATURETTES -->

      <hr class="featurette-divider">

      <div class="featurette">
        <iframe class="featurette-image pull-right" width="512" height="512" src="https://www.youtube.com/embed/9p4NkdzXazM" frameborder="0" allowfullscreen></iframe>
        <h2 class="featurette-heading">What's Hot? <span class="muted">It'll blow your mind.</span></h2>
        <p class="lead">Check out this post that has been trending!</p>
      </div>

      <hr class="featurette-divider">

      <div class="featurette">
	    <%= image_tag("ads.jpg", class: "featurette-image pull-right") %>
        <h2 class="featurette-heading">What's the talk of the town? <span class="muted">Check out what people are saying!</span></h2>
        <p class="lead"></p>
      </div>

      <hr class="featurette-divider">

    </div><!-- /.container -->
  
</body><% end %></html>
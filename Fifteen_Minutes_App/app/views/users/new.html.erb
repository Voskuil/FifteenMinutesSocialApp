<body id="signup">
<% provide(:title, 'Sign up') %>
<h1 class="main">Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name, :class => "title" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email, :class => "title" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, :class => "title" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation", :class => "title" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

	  <%= f.label :description, :class => "title" %>
	  <%= f.text_area :description, placeholder: "Describe yourself! You can also place nonvisible tags with \'#tags ...\'" %>
	  
	  <%= f.label :interest, :class => "title" %>
	  <%= f.text_area :interest, placeholder: "What are you looking for? \'myinterests, ...\'" %>
	  
	  <%= f.label :location, :class => "title" %>
	  <%= f.text_area :location, placeholder: "Where you at?" %>
	  
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div></html>